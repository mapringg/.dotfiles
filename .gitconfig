[core]
    excludesFile = ~/.config/git/ignore

[user]
    email = work@sorawitk.com
    name = Sorawit Kongnurat

[github]
    user = mapringg

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[init]
    defaultBranch = main

[pull]
    rebase = true

[push]
    default = upstream

[rebase]
    autoStash = true

[alias]
    # Basic commands
    st = status
    a = add
    aa = add --all
    cm = commit -m
    ca = commit --amend
    ps = push
    pl = pull
    co = checkout
    cb = checkout -b
    br = branch
    bd = branch -d
    m = merge

    # Stashing
    sl = stash list
    ss = stash save
    sp = stash pop
    sa = stash apply

    # Logging
    l = log --oneline
    lg = log --oneline --graph --decorate
    lp = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short

    # Diff
    d = diff
    ds = diff --staged

    # Advanced operations
    rb = rebase
    rbi = rebase -i
    cp = cherry-pick

    # Useful shortcuts
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk
    alias = config --get-regexp alias

    # File operations
    untrack = rm --cached
    discard = checkout --

    # Branch operations
    bm = branch --merged
    bnm = branch --no-merged

    # Remote operations
    rv = remote -v
    pso = push origin
    plo = pull origin

    # Cleanup
    pr = fetch --prune
    cu = !git branch --merged | grep -v '*' | xargs git branch -d

    # Show changes in a file
    changes = log -p --follow --
